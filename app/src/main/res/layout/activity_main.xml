<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:textColor="@color/white"
        android:text="0"
        android:gravity="center|end"
        android:textSize="40sp"
        android:background="@color/light_blue" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_blue">

            <Button
                android:id="@+id/buAC"
                android:text="AC"
                android:onClick="cancelEvent"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginEnd="1pt"
                android:textColor="@color/dark_red"
                android:background="@null"
                style="?android:attr/buttonBarButtonStyle">
            </Button>
            <Button
                android:id="@+id/buPlusMinus"
                android:text="+/-"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginEnd="1pt"
                android:background="@null"
                android:onClick="numberEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>
            <Button
                android:id="@+id/buPercent"
                android:text="%"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@null"
                android:onClick="percentEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>
            <Button
                android:id="@+id/buDivide"
                android:text="/"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@null"
                android:onClick="operatorEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_blue">

            <Button
                android:id="@+id/bu7"
                android:text="7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginEnd="1pt"
                android:textColor="@color/dark_red"
                android:background="@null"
                android:onClick="numberEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>
            <Button
                android:id="@+id/bu8"
                android:text="8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginEnd="1pt"
                android:background="@null"
                android:onClick="numberEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>
            <Button
                android:id="@+id/bu9"
                android:text="9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@null"
                android:onClick="numberEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>
            <Button
                android:id="@+id/buMultiply"
                android:text="x"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@null"
                android:onClick="operatorEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_blue">

            <Button
                android:id="@+id/bu4"
                android:text="4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginEnd="1pt"
                android:textColor="@color/dark_red"
                android:background="@null"
                android:onClick="numberEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>
            <Button
                android:id="@+id/bu5"
                android:text="5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginEnd="1pt"
                android:background="@null"
                android:onClick="numberEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>
            <Button
                android:id="@+id/bu6"
                android:text="6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@null"
                android:onClick="numberEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>
            <Button
                android:id="@+id/buMinus"
                android:text="-"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@null"
                android:onClick="operatorEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_blue">

            <Button
                android:id="@+id/bu1"
                android:text="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginEnd="1pt"
                android:textColor="@color/dark_red"
                android:background="@null"
                android:onClick="numberEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="numberEvent"
                style="?android:attr/buttonBarButtonStyle"
                android:text="2"></Button>
            <Button
                android:id="@+id/bu3"
                android:text="3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@null"
                android:onClick="numberEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>
            <Button
                android:id="@+id/buPlus"
                android:text="+"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:background="@null"
                android:onClick="operatorEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_blue">

            <Button
                android:id="@+id/bu0"
                android:text="0"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginEnd="1pt"
                android:textColor="@color/dark_red"
                android:background="@null"
                android:onClick="numberEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>
            <Button
                android:id="@+id/buDot"
                android:text="."
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginEnd="1pt"
                android:background="@null"
                android:onClick="numberEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>

            <Button
                android:id="@+id/buEquals"
                android:text="="
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="4.5"
                android:layout_marginRight="1pt"
                android:background="@null"
                android:onClick="equalsEvent"
                style="?android:attr/buttonBarButtonStyle">
            </Button>


        </TableRow>

    </TableLayout>


</LinearLayout>